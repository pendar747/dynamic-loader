{
        "version": "0.2.0",
        "configurations": [
            {
                "type": "node",
                "request": "launch",
                "name": "Run AVA test",
                "preLaunchTask": "compile file",
                "program": "${workspaceRoot}/mapToDist.js",
                "outFiles": [
                    "${workspaceRoot}/dist/**/*.js"
                ],
                "sourceMaps": true,
                "args": [
                    "${file}"
                ],
                "console": "integratedTerminal",
                "skipFiles": [
                    "${workspaceRoot}/node_modules/**/*.js",
                    "<node_internals>/**/*.js"
                ]
            }
        ]
    }